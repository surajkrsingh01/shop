<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_name"
        android:text="Item Name"
        android:textSize="@dimen/invoice_sub_header_text_size"
        android:gravity="left"
        android:textColor="@color/primary_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_hsn"
            android:text="HSN"
            android:layout_toLeftOf="@+id/text_qty"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/invoice_sub_header_text_size"
            android:gravity="right"
            android:textColor="@color/primary_text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_qty"
            android:text="Qty"
            android:layout_toLeftOf="@+id/text_mrp_label"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/invoice_sub_header_text_size"
            android:gravity="right"
            android:textColor="@color/primary_text_color"
            android:layout_width="@dimen/invoice_right_view_small_width"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_mrp"
            android:text="Mrp"
            android:layout_toLeftOf="@+id/text_rate_label"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/invoice_sub_header_text_size"
            android:gravity="right"
            android:textColor="@color/primary_text_color"
            android:layout_width="@dimen/invoice_right_view_width"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/text_rate"
            android:text="Rate"
            android:layout_toLeftOf="@+id/text_amount"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/invoice_sub_header_text_size"
            android:gravity="right"
            android:textColor="@color/primary_text_color"
            android:layout_width="@dimen/invoice_right_view_width"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_amount"
            android:text="Amt"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/invoice_sub_header_text_size"
            android:gravity="right"
            android:textColor="@color/primary_text_color"
            android:layout_width="@dimen/invoice_right_view_width"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>