<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/grey_border_bottom_background"
    android:layout_marginBottom="@dimen/view_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_pic"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/list_pic_size"
                android:layout_height="@dimen/list_pic_size" />

            <TextView
                android:id="@+id/tv_pdf"
                android:text="PDF"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/white"
                android:background="@drawable/accent_solid_circle"
                android:layout_width="@dimen/list_pic_size"
                android:layout_height="@dimen/list_pic_size"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/image_close"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close_black_24dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size" />

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rl_image_layout"
            android:layout_toLeftOf="@+id/image_close"
            android:layout_marginLeft="@dimen/list_details_horizontal_margin"
            android:layout_marginRight="@dimen/list_details_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_header"
                android:textSize="@dimen/list_header_text_size"
                android:text="Header"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/primary_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>