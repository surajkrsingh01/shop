<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_marginTop="@dimen/container_view_vertical_margin"
    card_view:cardElevation="5dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_list_image_size_1"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view"
        android:src="@drawable/thumb_2"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_list_image_size_1" />

        <RelativeLayout
            android:paddingLeft="@dimen/view_horizontal_margin"
            android:paddingRight="@dimen/view_horizontal_margin"
            android:paddingTop="@dimen/view_vertical_margin"
            android:paddingBottom="@dimen/view_vertical_margin"
            android:background="@drawable/transparent_gradient"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_title"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/home_list_title_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_below="@+id/text_title"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_icon"
                    android:src="@drawable/icon_1"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/home_list_icon_size"
                    android:layout_height="@dimen/home_list_icon_size" />

                <TextView
                    android:id="@+id/text_name"
                    android:layout_toRightOf="@+id/image_icon"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/home_list_name_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>