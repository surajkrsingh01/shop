<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linear_cancel_layout"
    android:padding="16dp"
    android:elevation="8dp"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text_cancel_order"
        android:text="Cancel Order"
        android:textStyle="bold"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/large_text_size"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_reason"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:hint="Reason"
        android:gravity="top"
        android:padding="10dp"
        android:background="@drawable/grey_border_small_round_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_total_amount_label"
            android:text="Total Amount"
            android:textStyle="bold"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/large_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_total_amount"
            android:layout_toRightOf="@+id/text_total_amount_label"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textColor="@color/accent_color_2"
            android:textSize="@dimen/large_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_back"
            android:text="Back"
            android:textColor="@color/white"
            android:background="@drawable/accent_2_solid_round_corner_background"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_cancel_order"
            android:layout_marginLeft="10dp"
            android:text="Cancel Order"
            android:textColor="@color/white"
            android:background="@drawable/accent_1_solid_round_corner_background"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>