<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.InvoiceActivity"
    tools:showIn="@layout/activity_invoice">

    <ImageView
        android:id="@+id/image_share"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/image_print"
        android:tint="@color/primary_text_color"
        app:srcCompat="@drawable/ic_menu_share"
        android:layout_width="22dp"
        android:layout_height="22dp" />

    <ImageView
        android:id="@+id/image_print"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/image_download"
        android:tint="@color/primary_text_color"
        app:srcCompat="@drawable/ic_print_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/image_download"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/image_close"
        android:tint="@color/primary_text_color"
        app:srcCompat="@drawable/ic_file_download_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/image_close"
        android:layout_margin="16dp"
        android:tint="@color/primary_text_color"
        app:srcCompat="@drawable/ic_clear_red_24dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/image_close"
        android:scrollbars="none"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_logo"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/invoice_logo_size"
            android:layout_height="@dimen/invoice_logo_size"/>

         <RelativeLayout
             android:paddingBottom="5dp"
             android:background="@drawable/grey_border_bottom_background"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:textColor="@color/invoice_primary_color"
                 android:textSize="@dimen/large_text_size"
                 android:text="Purchase Details"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

             <TextView
                 android:id="@+id/text_date"
                 android:layout_marginTop="7dp"
                 android:textSize="@dimen/invoice_header_text_size"
                 android:textAllCaps="true"
                 android:layout_alignParentRight="true"
                 android:textColor="@color/primary_text_color"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

         </RelativeLayout>

         <RelativeLayout
             android:layout_marginTop="@dimen/activity_vertical_margin"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <RelativeLayout
                 android:id="@+id/rl_payment_transaction_id"
                 android:layout_marginTop="2dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <TextView
                     android:id="@+id/text_payment_transaction_id_label"
                     android:text="Transaction Id"
                     android:layout_marginRight="10dp"
                     android:textStyle="bold"
                     android:textSize="@dimen/invoice_sub_header_text_size"
                     android:textColor="@color/primary_text_color"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />

                 <TextView
                     android:id="@+id/text_payment_transaction_id"
                     android:layout_alignTop="@+id/text_payment_transaction_id_label"
                     android:gravity="right"
                     android:layout_toRightOf="@+id/text_payment_transaction_id_label"
                     android:textSize="@dimen/invoice_sub_header_text_size"
                     android:textColor="@color/primary_text_color"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />

             </RelativeLayout>

         </RelativeLayout>

         <LinearLayout
             android:weightSum="2"
             android:layout_marginTop="@dimen/activity_vertical_margin"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <RelativeLayout
                 android:background="@color/invoice_light_color_1"
                 android:padding="12dp"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content">

                 <TextView
                     android:id="@+id/tvPurchaseSummary"
                     android:textColor="@color/invoice_primary_color"
                     android:textSize="@dimen/invoice_header_text_size"
                     android:text="Purchase Summary"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:id="@+id/tvTotalAmountLabel"
                     android:text="Total Amount"
                     android:layout_marginTop="6dp"
                     android:textColor="@color/primary_text_color"
                     android:textSize="@dimen/invoice_small_text_size"
                     android:layout_below="@+id/tvPurchaseSummary"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:id="@+id/textTotalAmount"
                     android:gravity="right"
                     android:textStyle="bold"
                     android:layout_below="@+id/tvTotalAmountLabel"
                     android:textSize="@dimen/invoice_sub_header_text_size"
                     android:textColor="@color/primary_text_color"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />

                 <TextView
                     android:id="@+id/tvItems"
                     android:text="Items"
                     android:layout_alignParentRight="true"
                     android:textColor="@color/primary_text_color"
                     android:textSize="@dimen/invoice_small_text_size"
                     android:layout_alignTop="@+id/tvTotalAmountLabel"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:id="@+id/text_total_items"
                     android:layout_alignLeft="@+id/tvItems"
                     android:textStyle="bold"
                     android:layout_below="@+id/tvItems"
                     android:layout_alignParentRight="true"
                     android:textSize="@dimen/invoice_sub_header_text_size"
                     android:textColor="@color/primary_text_color"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />

                 <TextView
                     android:layout_marginTop="8dp"
                     android:id="@+id/tvDiscountedItems"
                     android:text="Discounted Items: 0"
                     android:textColor="@color/primary_text_color"
                     android:textSize="@dimen/invoice_small_text_size"
                     android:layout_below="@+id/textTotalAmount"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:id="@+id/tvTotalSavingsLabel"
                     android:text="Total Savings"
                     android:textColor="@color/primary_text_color"
                     android:textSize="@dimen/invoice_small_text_size"
                     android:layout_below="@+id/tvDiscountedItems"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:id="@+id/text_total_savings"
                     android:layout_below="@+id/tvTotalSavingsLabel"
                     android:textStyle="bold"
                     android:textSize="@dimen/invoice_sub_header_text_size"
                     android:textColor="@color/invoice_primary_color"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />

             </RelativeLayout>

             <RelativeLayout
                 android:background="@color/invoice_light_color_2"
                 android:layout_marginLeft="12dp"
                 android:padding="12dp"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content">

                 <TextView
                     android:id="@+id/tvPaymentDetails"
                     android:textColor="@color/invoice_primary_color"
                     android:textSize="@dimen/invoice_header_text_size"
                     android:text="Payment Details"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>

                 <View
                     android:layout_below="@+id/tvPaymentDetails"
                     android:background="@color/separator_color"
                     android:layout_width="match_parent"
                     android:layout_height="1dp"/>

                 <RelativeLayout
                     android:layout_marginTop="6dp"
                     android:layout_below="@+id/tvPaymentDetails"
                     android:id="@+id/rl_payment_method"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <TextView
                         android:id="@+id/text_payment_method_label"
                         android:text="Payment Method:"
                         android:layout_marginRight="10dp"
                         android:textSize="@dimen/invoice_sub_header_text_size"
                         android:textColor="@color/primary_text_color"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />

                     <TextView
                         android:id="@+id/text_payment_method"
                         android:layout_alignTop="@+id/text_payment_method_label"
                         android:gravity="right"
                         android:layout_alignParentRight="true"
                         android:textSize="@dimen/invoice_sub_header_text_size"
                         android:textColor="@color/primary_text_color"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />

                 </RelativeLayout>

                 <RelativeLayout
                     android:id="@+id/rl_payment_brand"
                     android:layout_below="@+id/rl_payment_method"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">

                     <TextView
                         android:id="@+id/text_payment_brand_label"
                         android:text="Brand:"
                         android:layout_marginRight="10dp"
                         android:textSize="@dimen/invoice_sub_header_text_size"
                         android:textColor="@color/primary_text_color"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />

                     <TextView
                         android:id="@+id/text_payment_brand"
                         android:layout_alignParentRight="true"
                         android:gravity="right"
                         android:textSize="@dimen/invoice_sub_header_text_size"
                         android:textColor="@color/primary_text_color"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />

                     <View
                         android:layout_marginTop="24dp"
                         android:layout_below="@+id/text_payment_brand"
                         android:background="@color/separator_color"
                         android:layout_width="match_parent"
                         android:layout_height="1dp"/>

                     <RelativeLayout
                         android:id="@+id/rl_paid_id"
                         android:layout_below="@+id/text_payment_brand"
                         android:layout_marginTop="26dp"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">

                         <TextView
                             android:id="@+id/text_paid_label"
                             android:text="Amount"
                             android:layout_marginRight="10dp"
                             android:textSize="@dimen/invoice_sub_header_text_size"
                             android:textColor="@color/primary_text_color"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content" />

                         <TextView
                             android:id="@+id/textPaidAmount"
                             android:layout_alignTop="@+id/text_paid_label"
                             android:gravity="right"
                             android:textStyle="bold"
                             android:layout_alignParentRight="true"
                             android:textSize="@dimen/invoice_sub_header_text_size"
                             android:textColor="@color/primary_text_color"
                             android:layout_width="100dp"
                             android:layout_height="wrap_content" />

                     </RelativeLayout>

                 </RelativeLayout>

             </RelativeLayout>

         </LinearLayout>

            <View
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/separator_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:background="@color/invoice_light_color_2"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_name_label"
                    android:text="Item Name"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/text_qty_label"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:layout_marginRight="10dp"
                    android:gravity="left"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_qty_label"
                    android:text="Qty"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/text_amount_label"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="right"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_amount_label"
                    android:text="Net Amt"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="right"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="@dimen/invoice_right_view_width"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:background="@color/separator_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:weightSum="6"
                android:background="@color/invoice_light_color_2"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_hsn_label"
                    android:text="HSN"
                    android:textStyle="bold"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_dis_amount_label"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:text="Disc Amt"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_mrp_label"
                    android:text="MRP"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_cgst_label"
                    android:text="CGST%"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_sgst_label"
                    android:text="SGST%"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_tax_amount_label"
                    android:text="Tax Amt"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="right"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:background="@color/separator_color"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/separator_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_sub_total_amount_label"
                    android:text="Total Amount"
                    android:layout_toLeftOf="@+id/text_sub_total_amount"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_sub_total_amount"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:background="@color/separator_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rlDelivery"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_delivery_charge_label"
                    android:text="Delivery Charges"
                    android:layout_toLeftOf="@+id/textDeliveryAmount"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textDeliveryAmount"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:visibility="gone"
                android:id="@+id/separator_delivery"
                android:background="@color/separator_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_gross_total_amount_label"
                    android:text="Gross Total"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/text_gross_total_amount"
                    android:textSize="@dimen/invoice_header_text_size"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_gross_total_amount"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/invoice_header_text_size"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        <View
            android:background="@color/separator_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:weightSum="3"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_gst_label"
                android:text="GST"
                android:textStyle="bold"
                android:textSize="@dimen/invoice_sub_header_text_size"
                android:gravity="left"
                android:textColor="@color/primary_sub_text_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_base_amount_label"
                android:textStyle="bold"
                android:text="Base Amt"
                android:textSize="@dimen/invoice_sub_header_text_size"
                android:gravity="left"
                android:textColor="@color/primary_sub_text_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_tax_amt_label"
                android:text="Tax Amt"
                android:textStyle="bold"
                android:textSize="@dimen/invoice_sub_header_text_size"
                android:gravity="left"
                android:textColor="@color/primary_sub_text_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

            <View
                android:background="@color/separator_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:weightSum="3"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_base_cgst_label"
                    android:text="CGST"
                    android:textStyle="bold"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textBaseCgstAmount"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_cgst_tax_amt"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_base_sgst_label"
                    android:text="SGST"
                    android:textStyle="bold"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textBaseSgstAmount"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_sgst_tax_amt"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:weightSum="3"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_base_igst_label"
                    android:text="IGST"
                    android:textStyle="bold"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textBaseIgstAmount"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_igst_tax_amt"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:gravity="left"
                    android:textColor="@color/primary_sub_text_color"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="@color/separator_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/invoice_light_color_2"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvCustomerDetails"
                    android:textColor="@color/invoice_primary_color"
                    android:textSize="@dimen/invoice_header_text_size"
                    android:textAllCaps="true"
                    android:text="Customer Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_below="@+id/tvCustomerDetails"
                    android:background="@color/separator_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/text_customer_name"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textCustomerMobile"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/invoice_light_color_1"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvStoreDetails"
                    android:textColor="@color/invoice_primary_color"
                    android:textSize="@dimen/invoice_header_text_size"
                    android:textAllCaps="true"
                    android:text="Store Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_below="@+id/tvCustomerDetails"
                    android:background="@color/separator_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/text_shop_name"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_shop_address"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_shop_phone"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_shop_email"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_shop_gst"
                    android:textSize="@dimen/invoice_sub_header_text_size"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFeedback"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:padding="1dp"
                android:visibility="gone"
                android:background="@drawable/feedback_border_background"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="12dp"
                    android:background="@color/deep_orange50"
                    android:id="@+id/tvfeedbck"
                    android:gravity="center_horizontal"
                    android:textColor="@color/deep_orange500"
                    android:textSize="@dimen/invoice_header_text_size"
                    android:textAllCaps="true"
                    android:text="We value your feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="We request your valuable ratings of overall shopping experience. It will help us work to delight also your family and friends when they visit us."
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/green800"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="We would appreciate if you could spare a moment to rate us"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/green800"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="Any Additional comments/Remarks:"
                        android:textSize="@dimen/small_text_size"
                        android:textColor="@color/green800"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etFeedback"
                        android:layout_marginTop="8dp"
                        android:padding="10dp"
                        android:background="@drawable/grey_border_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/green700"
                    android:textColor="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Submit Feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="* Tax will be charged at applicable rates on the discounted products."
                android:textSize="@dimen/invoice_sub_header_text_size"
                android:textColor="@color/primary_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDearCustomerInfo"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Dear Customer"
                android:textSize="@dimen/invoice_sub_header_text_size"
                android:textColor="@color/primary_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_invoice_no"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/invoice_header_text_size"
                android:textColor="@color/primary_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/image_barcode"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textBarcodeNo"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/invoice_header_text_size"
                android:textColor="@color/blue600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>