<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/borderBottomSolidBackground"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_name"
        android:layout_toLeftOf="@+id/btn_apply"
        android:layout_marginRight="12dp"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/home_list_title_text_size_type_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/btn_apply"
        android:text="Apply"
        android:textSize="@dimen/large_text_size"
        android:textColor="@color/orange600"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_desc"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/text_name"
        android:textColor="?attr/secondaryTextColor"
        android:textSize="@dimen/small_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_max_discount"
        android:layout_below="@+id/text_desc"
        android:textColor="?attr/secondaryTextColor"
        android:textSize="@dimen/small_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>