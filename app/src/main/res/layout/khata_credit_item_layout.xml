<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_message_layout"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="?attr/borderRoundBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivRupee"
                android:tint="@color/red_500"
                android:layout_centerVertical="true"
                android:src="@drawable/rupee"
                android:layout_width="12dp"
                android:layout_height="12dp"/>

            <TextView
                android:id="@+id/tvAmt"
                android:textStyle="bold"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/ivRupee"
                android:textColor="@color/red_500"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvLabelInfo"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/rlAmount"
            android:text="Khata credit"
            android:textColor="?attr/secondaryTextColor"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDateLabel"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tvLabelInfo"
            android:text="Date:"
            android:textColor="?attr/secondaryTextColor"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_alignTop="@+id/tvDateLabel"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tvDateLabel"
            android:textColor="?attr/secondaryTextColor"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTypeLabel"
            android:visibility="gone"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tvDate"
            android:text="Type:"
            android:textColor="@color/red_500"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvType"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/tvView"
            android:layout_alignTop="@+id/tvTypeLabel"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tvTypeLabel"
            android:textColor="@color/red_500"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/tvView"
            android:tint="?attr/secondaryTextColor"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvDate"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>