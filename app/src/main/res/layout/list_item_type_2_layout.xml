<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    card_view:cardElevation="5dp"
    android:layout_marginTop="@dimen/container_view_vertical_margin"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view"
            android:src="@drawable/thumb_2"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_list_image_size_2" />

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/view_horizontal_margin"
            android:paddingRight="@dimen/view_horizontal_margin"
            android:paddingTop="@dimen/view_vertical_margin"
            android:paddingBottom="@dimen/view_vertical_margin"
            android:layout_below="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_category"
                android:textAllCaps="true"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/home_list_category_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_title"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/home_list_title_text_margin_type_2"
                android:layout_marginBottom="@dimen/home_list_title_text_margin_type_2"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/home_list_title_text_size_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_desc"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/home_list_desc_text_size_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>