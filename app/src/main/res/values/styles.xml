<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlayDark" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:minHeight">@dimen/btn_size</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="WhiteCheck">
        <item name="colorAccent">#fff</item>
    </style>

    <style name="MySelectViewTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/grey400</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="MyViewTheme">
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/grey400</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Dark" parent="AppThemeDark.NoActionBar">
        <item name="backgroundColor">@color/dark_color</item>cartViewBackgroundColor
        <item name="primaryTextColor">@color/white</item>
        <item name="reversePrimaryTextColor">@color/primary_text_color</item>
        <item name="secondaryTextColor">@color/secondary_text_color</item>
        <item name="separatorColor">@color/dark_separator_color</item>
        <item name="secondarySeparatorColor">@color/grey800</item>

        <item name="borderBottomSolidBackground">
            @drawable/dark_theme_grey_border_bottom_background
        </item>

        <item name="solidPrimaryStrokeBorderBackground">
            @drawable/white_stroke_dark_round_background
        </item>


    </style>

    <style name="Light" parent="AppTheme.NoActionBar">
        <item name="backgroundColor">@color/white</item>
        <item name="secondarySeparatorColor">@color/grey200</item>
        <item name="reversePrimaryTextColor">@color/white</item>
        <item name="primaryTextColor">@color/primary_text_color</item>
        <item name="secondaryTextColor">@color/secondary_text_color</item>
        <item name="separatorColor">@color/grey300</item>

        <item name="borderBottomSolidBackground">@drawable/grey_border_bottom_background</item>

        <item name="solidPrimaryStrokeBorderBackground">
            @drawable/grey_border_small_round_background
        </item>

    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


